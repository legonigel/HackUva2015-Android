<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#7a028b"
    tools:context="com.thekarlbrown.changetheworld.FriendsTab"
    android:paddingBottom="5dip">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/friends_list_every"
        android:layout_marginBottom="5dip"
        android:background="#FFFFFF"
        android:padding="5dip"
        android:layout_weight="1">

    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/friends_textbar"
        android:visibility="gone">

    <EditText android:id="@+id/friends_send_message"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:hint="Type your message here"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_send_button"
        android:background="#FFFFFF"
        android:text="@string/initial_button_submit"
        android:layout_gravity="right" />
    </LinearLayout>
</LinearLayout>