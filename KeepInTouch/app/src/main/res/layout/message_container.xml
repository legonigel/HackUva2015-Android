<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A22BB3"
    android:clickable="true"
    android:id="@+id/message_container_click"
    >
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/picplaceholder"
        android:gravity="end"
        android:id="@+id/message_container_picture"
        android:layout_weight="0"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:paddingLeft="5dip"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_container_user"
            android:textColor="#FFFFFF"
            android:text="username"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_gravity="left|center_vertical"/>
            <TextView
                android:paddingLeft="5dip"
                android:paddingRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_container_date"
                android:textColor="#FFFFFF"
                android:text="date here"
                android:textSize="20sp"
                android:gravity="start"
                android:layout_gravity="center_vertical|right"/>
            </LinearLayout>
        <TextView
            android:paddingLeft="5dip"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_container_content"
            android:textColor="#FFFFFF"
            android:text="contentgoeshere"
            android:textSize="20sp"
            android:gravity="start"
            android:layout_gravity="left" />
        </LinearLayout>

</LinearLayout>